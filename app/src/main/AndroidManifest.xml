<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.swat.mybudget" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_dollar"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden|stateVisible|adjustPan"
            android:theme="@style/BudgetMainTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PosBalance"
            android:label="@string/title_activity_pos_balance"
            android:parentActivityName=".MainActivity"
            android:windowSoftInputMode="stateHidden">
        </activity>
        <activity
            android:name=".NegBalance"
            android:label="@string/title_activity_neg_balance"
            android:parentActivityName=".MainActivity">
        </activity>
        <activity
            android:name=".ReservBalance"
            android:label="@string/title_activity_res_balance"
            android:parentActivityName=".MainActivity"
            android:windowSoftInputMode="stateHidden">
        </activity>
    </application>

</manifest>
